@{
    ViewData["Title"] = "Login";
}

	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
			</div>
			<div class="row justify-content-center">
				<div class="col-md-7 col-lg-5">
					<div class="wrap">
						<div class="login-wrap p-4 p-md-5">
			      			<h2 class="mb-4">Üye Girişi</h2>
							<form  method="post" asp-controller="Account" asp-action="Login">
			      		<div class="form-group mt-3">
			      			<input name="userName" type="text" class="form-control" id="username">
			      			<label class="form-control-placeholder" for="userName">Kullanıcı Adı</label>
			      		</div>
						  <br />
		            <div class="form-group">
		              <input id="pass" type="password" class="form-control" name="Password">
		              <label class="form-control-placeholder" for="pass">Şifre</label>
		              <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
		            </div>
					<br />
		            <div class="form-group">
		            	<button type="submit" class="form-control btn btn-primary rounded submit px-3">Giriş</button>
		            </div>
		          </form>
				  <div class="text-center">
					  <br />
					  Üye Değilsen <a asp-controller="Account" asp-action="Register" class="or-login">Kayıt Ol</a>
				  </div>
		        </div>
		      </div>
				</div>
			</div>
		</div>
	</section>