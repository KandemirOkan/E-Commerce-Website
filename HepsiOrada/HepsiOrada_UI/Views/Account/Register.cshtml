@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

 	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
			</div>
			<div class="row justify-content-center">
				<div class="col-md-7 col-lg-5">
					<div class="wrap">
						<div class="login-wrap p-4 p-md-5">
			      			<h2 class="mb-4">Üye Kaydı</h2>
							<form  method="post" asp-controller="Account" asp-action="Register">
							<div class="text-danger" asp-validation-summary="ModelOnly"></div>
			      		<div class="form-group mt-3">
                             <input class="form-control" asp-for="UserName">
							 <label asp-for="UserName">Kullanıcı Adı</label>
                             <span class="text-danger" asp-validation-for="UserName"></span>
			      		</div>
						<br />
						<div class="form-group mt-3">
                            <input class="form-control" asp-for="Email">
							<label asp-for="Email"></label>
                            <span class="text-danger" asp-validation-for="Email"></span>
			      		</div>
						<br />
						<div class="form-group mt-3">
                            <input class="form-control" asp-for="Password">
							<label asp-for="Password">Şifre</label>
                            <span class="text-danger" asp-validation-for="Password"></span>
			      		</div>
						<br />
						<div class="form-group mt-3">
                            <input class="form-control" asp-for="PasswordConfirm">
							<label asp-for="PasswordConfirm">Şifre Onayı</label>
                            <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
			      		</div>
						<br />
		            <div class="form-group">
		            	<button type="submit" class="form-control btn btn-primary rounded submit px-3">Kaydet</button>
		            </div>
		          </form>
		        </div>
		      </div>
				</div>
			</div>
		</div>
	</section>